<!DOCTYPE html>
<html lang = "en">
    <%- include('partials/head') %>
    <body>
        <div class = "banner">
            <h1>Select Author</h1>
        </div>
        <%- include('partials/clientNavbar') %>
        <div class = "content_section">
            <form action = "queryObservation" method = "post">
            <fieldset>
                <legend>Select User</legend>
                <label>Select Author</label>
                <select name = "_id">
                    <%observations.forEach(function(obj) { %>
                        <option value = "<%obj._id%>"</option>
                        <%=obj.authorName%>
                    <%})%>
                </select>
                <button>Search Observations</button>
                
            </fieldset>
            </form>
        </div>
    </body>
</html>